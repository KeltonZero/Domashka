#include <iostream>
#include <cmath>

using namespace std;
/*Пользователь вводит параметры фигуры. Найти периметр и площадь фигур:Конус (площадь)*/
int main() {

	cout << "Enter R" << endl;
	float R , L , S ,S1 , S2;
	cin >> R;

	cout << "Enter L" << endl;
	cin >> L;

	S1 = 3.14 * R * R;
	S2 = 3.14 * R * L;
	S = S1 + S2;

	cout << "S=" << S << endl;

	return 0;
}
